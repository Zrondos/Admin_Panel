document.getElementsByClassName("show")[0].style.display="none"
$("#edit_students").append("<%= escape_javascript("#{render partial: 'edit', locals: { cohort: @cohort, student: @student }}").html_safe %>");

span=document.createElement("span")
span.setAttribute("id","button_<%=@student.id%>")
to_append_to=document.getElementById("buttons")
button=document.createElement("button")
button.setAttribute("type","button")
button.setAttribute("class","no_border")
button.setAttribute("onclick","displayStudent(<%=@student.id%>)")
image=document.createElement("img")
image.setAttribute("src","<%= asset_path 'medal.png' %>")
image.setAttribute("class","button_size")
button.appendChild(image)
span.appendChild(button)
span.innerHTML+="<%=@student.last_name%> <%=@student.last_name%> <br>"
to_append_to.appendChild(span)