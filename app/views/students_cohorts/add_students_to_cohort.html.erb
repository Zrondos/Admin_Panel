<%= @cohort.name %>
<%= form_with model: @students_cohort, url:students_cohort_create_path do |form| %>

    <%= form.select(:students_ids, options_for_select(@students), 
                                   { :prompt => "Please select"},
                                   { :multiple => true, :size => 5 }
                                 ) %>
    <%= form.hidden_field :cohort_id, value: @cohort.id %>
    <%= form.submit %>
<% end %>
                    